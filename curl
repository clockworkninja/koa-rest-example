//POST AS ADMIN
curl -d '{"from": "admin", "to": "user" , "message":"this is a message"}' -H "Content-Type: application/json" -H "Authorization: Basic dXNlcjpzZWNyZXQ=" -X POST http://localhost:3000/message -i